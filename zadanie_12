s = '2' * 52

while ('222' in s) or ('000' in s):  # ПОКА нашлось (33333) ИЛИ нашлось (999)
    if '000' in s:  # ЕСЛИ нашлось (33333)
        s = s.replace('000', '2', 1)  # заменить (33333, 99)
    else:  # ИНАЧЕ
        s = s.replace('222', '02', 1)  # заменить (999, 3)

print(s)  # Выводим получившуюся строку
